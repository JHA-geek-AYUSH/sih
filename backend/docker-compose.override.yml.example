# This file should be copied to docker-compose.override.yml for local development
# It overrides the default docker-compose.yml with environment-specific settings

version: '3.8'

services:
  mongodb:
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${MONGO_ROOT_USERNAME:-admin}
      MONGO_INITDB_ROOT_PASSWORD: ${MONGO_ROOT_PASSWORD:-your_secure_password}
      MONGO_INITDB_DATABASE: ${MONGO_DATABASE:-pharmalytics_care}

  backend:
    environment:
      NODE_ENV: ${NODE_ENV:-development}
      PORT: ${PORT:-5000}
      MONGODB_URI: ${MONGODB_URI:-mongodb://admin:your_secure_password@mongodb:27017/pharmalytics_care?authSource=admin}
      JWT_SECRET: ${JWT_SECRET:-your_super_secret_jwt_key_here}
      REDIS_URL: ${REDIS_URL:-redis://redis:6379}
      EMAIL_HOST: ${EMAIL_HOST:-smtp.gmail.com}
      EMAIL_PORT: ${EMAIL_PORT:-587}
      EMAIL_USER: ${EMAIL_USER:-your_email@gmail.com}
      EMAIL_PASS: ${EMAIL_PASS:-your_app_password}
      TWILIO_ACCOUNT_SID: ${TWILIO_ACCOUNT_SID:-your_twilio_account_sid}
      TWILIO_AUTH_TOKEN: ${TWILIO_AUTH_TOKEN:-your_twilio_auth_token}
      TWILIO_PHONE_NUMBER: ${TWILIO_PHONE_NUMBER:-your_twilio_phone_number}
      FRONTEND_URL: ${FRONTEND_URL:-http://localhost:8080}
